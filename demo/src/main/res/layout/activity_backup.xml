<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/base_dp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="数据Id:"
                android:textSize="@dimen/base_dp_15" />

            <EditText
                android:id="@+id/et_data_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/base_dp_20"
                android:background="@null"
                android:hint="数据id"
                android:textSize="@dimen/base_dp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="数据类型:"
                android:textSize="@dimen/base_dp_15" />

            <EditText
                android:id="@+id/et_data_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/base_dp_20"
                android:background="@null"
                android:hint="数据类型"
                android:textSize="@dimen/base_dp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="数据内容:"
                android:textSize="@dimen/base_dp_15" />

            <EditText
                android:id="@+id/et_data_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/base_dp_20"
                android:background="@null"
                android:hint="请输入数据正文"
                android:textSize="@dimen/base_dp_15" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:background="#ff00c1ce"
            android:gravity="center"
            android:padding="@dimen/base_dp_20"
            android:text="备份"
            android:textColor="#fff"
            android:textSize="@dimen/base_dp_15" />
    </LinearLayout>
</layout>