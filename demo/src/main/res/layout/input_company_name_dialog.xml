<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp_30"
            android:layout_marginBottom="@dimen/base_dp_30"
            android:background="@null"
            android:padding="@dimen/base_dp_10"
            android:textSize="@dimen/base_dp_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dp_0_5"
            android:background="@color/base_color_DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dp_50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/base_color_999999"
                android:textSize="@dimen/base_dp_18"
                tools:text="取消" />

            <View
                android:layout_width="@dimen/base_dp_0_5"
                android:layout_height="match_parent"
                android:background="@color/base_color_DDDDDD" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/base_color_00c1ce"
                android:textSize="@dimen/base_dp_18" />
        </LinearLayout>
    </LinearLayout>


</layout>
