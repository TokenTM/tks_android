<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".demo.MainActivity">

            <Button
                android:id="@+id/bt_load_go_aar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="go and aar"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/bt_load_so_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="load so文件"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/bt_cert_by_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="身份证认证"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/bt_cert_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="公司认证" />

            <Button
                android:id="@+id/bt_backup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备份数据"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </ScrollView>
</layout>