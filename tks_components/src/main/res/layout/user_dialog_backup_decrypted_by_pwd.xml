<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="身份密码"
            android:textColor="#374F66"
            android:textSize="17sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/backup_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/user_line_round_rect_gray"
            android:gravity="center_vertical"
            android:hint="请输入您的身份密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="7dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/backup_pwd_forget_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="忘记身份密码?"
            android:textColor="#FF820E"
            android:textSize="12sp" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/base_btn_bg_selector"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
</layout>