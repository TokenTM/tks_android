<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.tokentm.sdk.components.identitypwd.UserCheckPrivateKeyVM" />

        <variable
            name="presenter"
            type="com.tokentm.sdk.components.identitypwd.UserCheckPrivateKeyPresenter" />
    </data>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/tks_components_user_check_private_key_bg"
        android:gravity="center_horizontal"
        android:minWidth="295dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="输入私钥"
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxWidth="269dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:text="提示：该操作涉及企业链上信息更新,需要您的个人私钥密码进行确认"
            android:textColor="#ffff820e"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/input_private_key_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/tks_components_user_check_private_key_et"
            android:gravity="center_vertical"
            android:hint="请输入您的私钥号码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:paddingBottom="7dp"
            android:text="@={viewModel.privateKey}"
            android:textColor="#333333"
            android:textColorHint="#CCCCCC"
            android:textSize="15sp" />

        <View
            android:layout_marginTop="15dp"
            android:background="#E5E5E5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:onClick="@{()->presenter.onCancelCheckPrivateKey()}"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#ff999999"
                android:textSize="18sp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:clickable="@{viewModel.submitable}"
                android:onClick="@{()->presenter.onCheckPrivateKey()}"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textColor="#fffdd63c"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>

</layout>