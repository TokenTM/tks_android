<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:text="原身份密码"
                android:textColor="#ff374f66"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/identity_original_pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入原身份密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/identity_original_pwd_hide_iv"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:src="@drawable/tks_components_base_ic_eye_selector" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F1F1F1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:text="设置身份密码"
                android:textColor="#ff374f66"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/identity_pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请设置新身份密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/identity_pwd_hide_iv"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:src="@drawable/tks_components_base_ic_eye_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/identity_pwd_check_length_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tks_components_user_ic_pwd_selected_state_sl"
                    android:drawablePadding="5dp"
                    android:text="6-20位字符"
                    android:textColor="#ff737785"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/identity_pwd_check_combine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/tks_components_user_ic_pwd_selected_state_sl"
                    android:drawablePadding="5dp"
                    android:text="字母及数字组合"
                    android:textColor="#ff737785"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F1F1F1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="确认身份密码"
                android:textColor="#ff374f66"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/identity_repwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请确认您的新身份密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/identity_repwd_hide_iv"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:src="@drawable/tks_components_base_ic_eye_selector" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#F1F1F1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:lineSpacingExtra="6dp"
                android:text="温馨提示：身份密码用于管理用户私钥，即授权调用本地私钥行使数字权益。您的私有权益数据加密存储于本地和云端，没有私钥将无法解开使用，请务必牢记身份密码。"
                android:textColor="#ffff820e"
                android:textSize="13sp" />
            <Button
                android:id="@+id/ok_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/tks_components_base_btn_bg_selector"
                android:text="确认"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</layout>