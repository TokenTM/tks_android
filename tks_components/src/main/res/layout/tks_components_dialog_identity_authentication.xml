<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.tokentm.sdk.components.identitypwd.presenter.IdentityAuthenticationPresenter" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="#6cf">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="36dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="33dp"
                    android:paddingEnd="33dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tks_components_identity_authentication_top_bg"
                    android:gravity="center_horizontal"
                    android:paddingTop="51dp"
                    android:paddingBottom="16dp"
                    android:text="请前往身份认证哦~"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/identity_pwd_forget_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tks_components_identity_authentication_bottom_bg"
                    android:gravity="center_horizontal"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:text="去认证"
                    android:textColor="#ffffff"
                    android:onClick="@{()->presenter.goAuthentication()}"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/tks_components_identity_authentication_top" />
    </FrameLayout>

</layout>